# This script wraps xoctave to launch through xvfb-run, a virtual frame
# buffer for Xorg needed for headless builds.
# https://github.com/jupyter-xeus/xeus-octave/blob/main/.binder/postBuild

cd "$(which xoctave | xargs dirname)"

mv xoctave _xoctave

cat << EOF > xoctave
#!${SHELL}
xvfb-run "${PWD}/_xoctave" "\$@"
EOF

chmod +x xoctave

jupyter labextension install jupyterlab-plotly

# Download, compile and install SPM12
mkdir ${HOME}/spm12 && curl -SL https://github.com/spm/spm12/archive/r7771.tar.gz | tar -xzC ${HOME}/spm12 --strip-components 1
curl -SL https://raw.githubusercontent.com/spm/spm-docker/master/octave/spm12_r7771.patch | patch -d ${HOME}/spm12 -p3
cd ${HOME}/spm12/src
make PLATFORM=octave
make PLATFORM=octave install
cd ${HOME}
octave --no-gui --eval "addpath (fullfile (getenv (\"HOME\"), \"spm12\")); savepath ();"
